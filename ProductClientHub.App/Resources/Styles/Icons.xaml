<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Shared icon sizing to avoid oversized SVGs -->
    <Style x:Key="IconImage" TargetType="Image">
        <Setter Property="WidthRequest" Value="20" />
        <Setter Property="HeightRequest" Value="20" />
        <Setter Property="Aspect" Value="AspectFit" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style x:Key="IconButton" TargetType="ImageButton">
        <Setter Property="WidthRequest" Value="24" />
        <Setter Property="HeightRequest" Value="24" />
        <Setter Property="MinimumWidthRequest" Value="24" />
        <Setter Property="MinimumHeightRequest" Value="24" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Compact primary button used for inline actions -->
    <Style x:Key="SmallButton" TargetType="Button">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Padding" Value="10,6" />
        <!-- Override implicit Button style sizing -->
        <Setter Property="HeightRequest" Value="32" />
        <Setter Property="MinimumHeightRequest" Value="32" />
        <Setter Property="MinimumWidthRequest" Value="0" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Shadow" Value="{x:Null}" />
    </Style>

</ResourceDictionary>
