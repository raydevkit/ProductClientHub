<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProductClientHub.App.Views.Shells.DashboardShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dashboard="clr-namespace:ProductClientHub.App.Views.Pages.Dashboard"
    Title="ProductClientHub"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Dashboard">
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate dashboard:DashboardPage}" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Grid Padding="16">
            <Button Text="Logout"
                    TextColor="White"
                    BackgroundColor="Black"
                    CornerRadius="12"
                    HeightRequest="48"
                    Clicked="OnLogoutClicked" />
        </Grid>
    </Shell.FlyoutFooter>

</Shell>
